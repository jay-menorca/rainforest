<h1>Product Details</h1>

<%= link_to "Back", products_path%> | <%= link_to "Edit", edit_product_path%> | <%= link_to "Delete", product_path(@product.id), method: :delete, data: {confirm: 'Sure?'}%>

<p><strong>Product: </strong><%= @product.name%></p>
<p><strong>Description: </strong><%= @product.description%></p>
<p><strong>Price: </strong><%= @product.price_in_cents%></p>

<% if current_user%>
	<h3>Reviews</h3>
	<%= render "display_review"%>

	<h4>New Review</h4>
	<%= render "review_form"%>
<% else %>
	<p>Please <%= link_to "log in", new_session_path %> to add a review</p>
<% end %>
